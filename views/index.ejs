<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/styles/styles.css">
  <title>Songtify</title>
  <style>
    body {
      background-image: url('walpaper.jpg');
      background-size: cover;
      background-repeat: no-repeat;
      background-attachment: fixed;
    }

    .content {
      background: rgba(255, 255, 255, 0.8);
      padding: 20px;
      border-radius: 10px;
      margin-top: 20px;
    }

    .slideshow-container {
      max-width: 100%;
      position: relative;
      margin: auto;
    }

    .mySlides {
      display: none;
    }

    .card-link {
      text-decoration: none;
      color: inherit;
    }

    .custom-text {
      color: #000;
    }
  </style>
</head>

<body>
  <%- include('partials/navbar') %>

    <div class="container mt-4 content">
      <!-- Slideshow Section -->
      <div class="slideshow-container">
        <img class="mySlides" src="/images/header1.jpg" style="width:100%">
        <img class="mySlides" src="/images/header2.jpg" style="width:100%">
        <img class="mySlides" src="/images/header3.jpg" style="width:100%">
        <img class="mySlides" src="/images/header4.jpg" style="width:100%">
        <img class="mySlides" src="/images/header5.jpg" style="width:100%">
        <img class="mySlides" src="/images/header6.jpg" style="width:100%">
        <img class="mySlides" src="/images/header7.jpg" style="width:100%">
      </div>

      <!-- Top Songs Section -->
      <div class="text-center mb-4">
        <h2>Song Recommendations</h2>
      </div>

      <div class="row">
        <% music.forEach(function(music) { %>
          <div class="col-md-4">
            <div class="card">
              <a href="/music/<%= music.musicId %>" class="card-link">
                <img src="/images/<%= music.image %>" alt="<%= music.artist %>" class="card-img-top">
                <a href="/editMusic/<%= music.musicId %>" class="btn btn-primary">Edit</a>
                <a href="/deleteMusic/<%= music.musicId %>" class="btn btn-danger">Delete</a>
                <div class="container">
                  <h4 class="custom-text"><b>
                      <%= music.title %>
                    </b></h4>
                  <p class="custom-text">
                    <%= music.artist %>
                  </p>
                </div>
              </a>
            </div>
          </div>
          <% }); %>
      </div>
    </div>

    <script>
      var myIndex = 0;
      carousel();

      function carousel() {
        var i;
        var x = document.getElementsByClassName("mySlides");
        for (i = 0; i < x.length; i++) {
          x[i].style.display = "none";
        }
        myIndex++;
        if (myIndex > x.length) { myIndex = 1 }
        x[myIndex - 1].style.display = "block";
        setTimeout(carousel, 2000); // Change image every 2 seconds
      }
    </script>
</body>

</html>